.mainMenu {
  background-color: white;
  box-shadow: 0 1px 6px rgba(57,73,76,0.35);
  color: #666;
  height: 40px;

  .navbar {
    padding: 0;
  }

  .nav {
    margin: 0 auto;
  }

  .menuIcon {
    width: 20px;
    height: 20px;
    margin-right: 2px;
  }

  .menuItem {
    vertical-align: middle;
  }

  .nav-link {
    color: #666;
  }
}

.menu-toggle {
  padding: 0;
}

.cr-sidebar {
  position: fixed;
  top: 0;
  bottom: 0;
  left: -1000px;
  z-index: 5;
  width: 100%;
  font-weight: 200;
  background-color: white;
  background-position: 50%;
  background-size: cover;
  transition: left .1s ease-in;
  padding: 20px;

  .header {
    .btn {
      width: 40px;
      height: 40px;
      float: right;
      padding: 0;
    }
  }
}

.cr-sidebar-open {
  left: 0;
  transition: left .2s ease-in;
}

.sidebar {
  flex-direction: column;
}