.number-picker {
  display: table;
  height: 40px;

  .ctrl {

    display: table-cell;
    height: 100%;
    text-align: center;
    vertical-align: middle;
    padding-right: 0;
    padding-left: 0;

    .btn {
      height: 100%;
    }

    .number-input {
      height: 100%;
      width: 60px;

      .form-control {
        border-radius: 0;
      }
    }
  }

  .up, .down {
    z-index: 20;
    padding-top: 0;
    padding-bottom: 0;
  }

  .up {
    .btn {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }
  }

  .down {
    .btn {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }
  }
}
