.number-picker {
  display: table;
  height: 40px;

  .ctrl {

    display: table-cell;
    height: 100%;
    text-align: center;
    vertical-align: middle;
    padding-right: 2px;

    .btn {
      height: 100%;
    }

    .form-control {
      height: 100%;
      width: 60px;
    }
  }

  .up, .down {
    padding-top: 2px;
    padding-bottom: 2px;
  }
}
