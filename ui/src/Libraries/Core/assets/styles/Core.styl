body {
  background-color: #F2F2F2;
}

.card {
  margin-bottom: 20px;
  background-color: #fff;
  border: 1px solid transparent;
  border-radius: 4px;
  -webkit-box-shadow: 0 1px 1px rgba(0,0,0,.05);
  box-shadow: 0 1px 1px rgba(0,0,0,.05);

  border-color: #ddd;
}

.card-body {
  padding: 16px;
}

.spinner {
  width: fit-content;
  margin: 32px auto;
}

.barLoader {
  width: fit-content;
  height: fit-content;
  margin: auto;
}
