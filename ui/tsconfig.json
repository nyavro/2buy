{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2015",
        "jsx": "react",
        "baseUrl": "src",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        // "**/*.spec.ts"
    ]
}
